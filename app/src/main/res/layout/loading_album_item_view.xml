<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/shimmerTitle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/max_margin"
        android:layout_marginEnd="@dimen/max_margin"
        android:layout_marginTop="@dimen/max_margin"
        android:background="@color/shimmerBackground"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerAuthor"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/max_margin"
        android:layout_marginTop="@dimen/max_margin"
        android:layout_marginBottom="@dimen/max_margin"
        android:background="@color/shimmerBackground"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintStart_toStartOf="@+id/shimmerTitle"
        app:layout_constraintTop_toBottomOf="@+id/shimmerTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>